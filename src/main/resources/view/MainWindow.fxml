<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chatbot.gui.MainWindow"
            prefHeight="600.0"
            prefWidth="400.0"
            style="-fx-background-color: #F5F5F5;"> <!-- light gray background -->

    <!-- Scrollable chat area -->
    <ScrollPane fx:id="scrollPane"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED"
                fitToWidth="true"
                AnchorPane.topAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="60.0"
                style="-fx-background: transparent; -fx-border-color: transparent; -fx-padding: 10;">
        <content>
            <VBox fx:id="dialogContainer" spacing="10.0" fillWidth="true" style="-fx-background-color: transparent;">
                <!-- Chat bubbles will automatically grow horizontally -->
            </VBox>
        </content>
    </ScrollPane>

    <!-- Bottom input area -->
    <HBox spacing="10.0"
          AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0"
          AnchorPane.bottomAnchor="10.0"
          style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-background-radius: 12; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0.5, 0, 2);">

        <TextField fx:id="userInput" HBox.hgrow="ALWAYS" onAction="#handleUserInput" promptText="Type a message..."
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 6; -fx-background-color: #F0F0F0;"/>
        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" text="Send"
                style="-fx-background-color: #A8D0E6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;"/>
    </HBox>

</AnchorPane>
